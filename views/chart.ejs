<body class="is-preload">

    <!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Header -->
        <header id="header" class="alt">
            <h1><a>新闻爬虫查询网站</a></h1>
            <nav>
                <a style="color:black;" href="#menu">目录</a>
            </nav>
        </header>

        <!-- Menu -->
        <nav id="menu">
            <div class="inner">
                <h2>目录</h2>
                <ul class="links">
                    <li><a href="index">主页</a></li>
                    
                    <li><a href="show">查询</a></li>
                    <li><a href="chart">图表</a></li>
                    <li><a href="administrate">管理</a></li>
                </ul>
            </div>
        </nav>

        <!-- Banner -->
        <section id="banner">
            <div class="inner">
                <form>
                    <select id="charts" style="height: 50px;width: 100px;font-size: large; color:black; border: 1px solid #277de2;
                    border-radius:4px;" onchange="func()">
                        <option value="选择图表">选择图表</option>
                        <option value="折线图">折线图</option>
                        <option value="饼图">饼图</option>
                        <option value="词云">词云</option>
                    </select>
                </form>
                <br></br><br></br>
                <div id="chart" style="width: 700px; height: 500px;"></div>
            </div>
        </section>

        <!-- Wrapper -->

        <!-- Footer -->
        <section id="footer">
            <div class="inner">
                <ul class="copyright">
                    <li>&copy; All rights reserved.</li>
                    <li>Design: syz</li>
                </ul>
            </div>
        </section>

    </div>

    <script>
       function func() {
            //获取被选中的option标签
            var vs = $('select  option:selected').val();
            if (vs == "饼图") {
                var res = [];
                document.getElementById("charts").onclick = function () {
                    $.get("get_source_num", function (data, status) {
                        var json = JSON.parse(data);
                        $(json).each(function () {
                            var obj = new Object();
                            obj.value = parseInt(this.count);
                            obj.name = this.source_name;
                            res.push(obj);
                        });
                        
                        var chartDom = document.getElementById('chart');
                        var mychart = echarts.getInstanceByDom(chartDom);
                        if(mychart == null) {
                            mychart = echarts.init(chartDom);
                        }
                        var option;
                        option = {
                            title: {
                                text: '来源网站新闻数对比',
                                left: 'center'
                            },
                            tooltip: {
                                trigger: 'item'
                            },
                            legend: {
                                orient: 'vertical',
                                left: 'left',
                            },
                            series: [
                                {
                                    name: '来源网站',
                                    type: 'pie',
                                    radius: '50%',
                                    data: res,
                                    emphasis: {
                                        itemStyle: {
                                            shadowBlur: 10,
                                            shadowOffsetX: 0,
                                            shadowColor: 'rgba(0, 0, 0, 0.5)'
                                        }
                                    }
                                }
                            ]
                        };
                        mychart.setOption(option,true);
                    });
                };
            }
            else if (vs == "折线图") {
                var date = [];
                var count = [];
                
                document.getElementById("charts").onclick = function () {
                    $.get("get_date_num", function (data, status) {
                        var json = JSON.parse(data);
                        console.log(json);
                        $(json).each(function () {
                            if (this.publish_date) {
                                count.push(parseInt(this.count));
                                date.push(this.publish_date.slice(0, 10));
                            }
                        });
                        //    console.log(date);
                        //    console.log(count);
                        // $("#chart").empty();
                        var chartDom = document.getElementById('chart');
                        let mychart = echarts.getInstanceByDom(chartDom);
                        if(mychart == null) {
                            mychart = echarts.init(chartDom);
                        }
                        var option2;
                        option2 = {
                            title: {
                                text: '新闻数随时间变化',
                            },
                            tooltip: {
                                trigger: 'axis'
                            },
                            legend: {
                                data: ['新闻数量']
                            },
                            toolbox: {
                                show: true,
                                feature: {
                                    dataZoom: {
                                        yAxisIndex: 'none'
                                    },
                                    dataView: { readOnly: false },
                                    magicType: { type: ['line', 'bar'] },
                                    restore: {},
                                    saveAsImage: {}
                                }
                            },
                            xAxis: {
                                type: 'category',
                                data: date
                            },
                            yAxis: {
                                type: 'value',
                                axisLabel: {
                                }
                            },
                            series: [
                                {
                                    name: '新闻数量',
                                    type: 'line',
                                    data: count
                                }
                            ]
                        };
                        mychart.setOption(option2);
                    });
                };
            }
            else {
                var list = [];
                document.getElementById("charts").onclick = function () {
                    $.get("get_keyword_num", function (data, status) {
                        data = eval(data);
                        for (var i = 0; i < 500; i++) {
                            list.push({ name: data[i].word, value: parseInt(data[i].num) });
                        }
                        console.log(list);

                        var chartDom = document.getElementById('chart');
                        var mychart = echarts.getInstanceByDom(chartDom);
                        if(mychart == null) {
                            mychart = echarts.init(chartDom);
                        }
                        image1 = "data:image/png;base64,"

                        var maskResource = new Image()
                        maskResource.src = image1;
                        var option = {
                            //设置标题，居中显示
                            title: {
                                text: '词云图',
                                left: 'center',
                            },
                            //数据可以点击
                            tooltip: {

                            },

                            series: [
                                {
                                    maskImage: maskResource,
                                    //词的类型
                                    type: 'wordCloud',
                                    //设置字符大小范围
                                    sizeRange: [6, 78],
                                    rotationRange: [-45, 90],
                                    textStyle: {
                                        normal: {
                                            //生成随机的字体颜色
                                            color: function () {
                                                return 'rgb(' + [
                                                    Math.round(Math.random() * 160),
                                                    Math.round(Math.random() * 160),
                                                    Math.round(Math.random() * 160)
                                                ].join(',') + ')';

                                            }
                                        }

                                    },
                                    data: list

                                }
                            ]

                        };
                        //加载图像，将数据放在图像中
                        maskResource.onload = function () {
                            mychart.setOption(option)
                        };
                    });

                }
            }
        }
    </script>
    <script src="js/jquery.scrollex.min.js"></script>
    <script src="js/browser.min.js"></script>
    <script src="js/breakpoints.min.js"></script>
    <script src="js/util.js"></script>
    <script src="js/main.js"></script>
    

</body>

