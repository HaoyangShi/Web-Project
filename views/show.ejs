    <script>

        
        $("#search_button").click(function () {
        
        // on application exit:
        // console.log("here")
            var v = $("#selection").val();
            if (v == '新闻标题') {
                $('#source_name_table').bootstrapTable('destroy');
                $('#keyword_table').bootstrapTable('destroy');
                $('#order_table').bootstrapTable('destroy');
                var title = $("#search_text").val();
                console.log(title);
                var params = '/title?title=' + title;
                $(function () {
                    console.log(params);
                    $("#title_table").empty();
                    $('#title_table').bootstrapTable({
                        url: params,
                        method: 'GET',
                        pagination: true,
                        sidePagination: 'client',
                        pageSize: 5,
                        striped: true,
                        sortable: true,
                        sortOrder: "asc",
                        showRefresh: true,
                        search: true,
                        // showToggle: true,
                        toolbar: '#toolbar',
                        showColumns: true,
                        columns: [{
                            field: 'url',
                            title: 'url',
                            sortable: true
                        }, {
                            field: 'title',
                            title: 'title'
                        }, {
                            field: 'source_name',
                            title: 'source_name',
                            sortable: true
                        }, {
                            field: 'publish_date',
                            title: 'publish_date',
                            sortable: true
                        }],
                        theadClasses: "thead-light"
                    })
                });
                $('#search_text').val('');
            }
            if (v == '源网站名') {
                $('#title_table').bootstrapTable('destroy');
                $('#keyword_table').bootstrapTable('destroy');
                $('#order_table').bootstrapTable('destroy');
                var source_name = $("#search_text").val();
                var params = '/source_name?source_name=' + source_name;
                $(function () {
                    $("#source_name_table").empty();
                    $('#source_name_table').bootstrapTable({
                        url: params,
                        method: 'GET',
                        pagination: true,
                        sidePagination: 'client',
                        pageSize: 5,
                        striped: true,
                        sortable: true,
                        sortOrder: "asc",
                        showRefresh: true,
                        search: true,
                        showToggle: true,
                        toolbar: '#toolbar',
                        showColumns: true,
                        columns: [{
                            field: 'url',
                            title: 'url',
                            sortable: true
                        }, {
                            field: 'title',
                            title: 'title'
                        }, {
                            field: 'source_name',
                            title: 'source_name',
                            sortable: true
                        }, {
                            field: 'publish_date',
                            title: 'publish_date',
                            sortable: true

                        }],
                        theadClasses: "thead-light"
                    })
                });
                $('#search_text').val('');
            }
            if (v == '关键词') {
                $('#title_table').bootstrapTable('destroy');
                $('#source_name_table').bootstrapTable('destroy');
                $('#order_table').bootstrapTable('destroy');
                var keyword = $("#search_text").val();
                var params = '/keyword?keyword=' + keyword;
                $(function () {
                    // console.log(params);
                    $("#keyword_table").empty();
                    $('#keyword_table').bootstrapTable({
                        url: params,
                        method: 'GET',
                        pagination: true,
                        sidePagination: 'client',
                        pageSize: 5,
                        striped: true,
                        sortable: true,
                        sortOrder: "asc",
                        showRefresh: true,
                        search: true,
                        showToggle: true,
                        toolbar: '#toolbar',
                        showColumns: true,
                        columns: [{
                            field: 'url',
                            title: 'url',
                            sortable: true
                        }, {
                            field: 'title',
                            title: 'title'
                        }, {
                            field: 'source_name',
                            title: 'source_name',
                            sortable: true
                        }, {
                            field: 'word',
                            title: 'word',
                            sortable: true
                        }],
                        theadClasses: "thead-light",
                    })
                });
                $('#search_text').val('');
            }
            if (v == '关键词热度') {
            $('#title_table').bootstrapTable('destroy');
            $('#keyword_table').bootstrapTable('destroy');
            $('#source_name_table').bootstrapTable('destroy');
            var nums = [];
            var dates = [];
            var keyword = $("#search_text").val();
            var params = '/keywords?keyword=' + keyword;
            console.log(params);
            
            $.get(params, function (data) {
                var json = JSON.parse(data);
                console.log(json);
                $(json).each(function () {
                    nums.push(parseInt(this.num));
                    dates.push(this.publish_date);
                });
                console.log(nums);
                console.log(dates);
                var myChart1 = echarts.init(document.getElementById('chart1'));
                // 指定图表的配置项和数据
                var option1 = {
                    title: {
                        text: '关键词时间热度图'
                    },
                    tooltip: {},
                    legend: {
                        data: ['新闻数量']
                    },
                    xAxis: {
                        data: dates
                    },
                    yAxis: {},
                    series: [{
                        name: '新闻数量',
                        type: 'bar',
                        data: nums
                    }]
                };
                // 使用刚指定的配置项和数据显示图表。
                myChart1.setOption(option1);
            });
            $('#search_text').val('');
            }
        })
        
